{
    "compilerOptions": {
        "target": "es5",
        "module": "ESNext",
        "allowJs": false,
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "outDir": "./dist/",
        "baseUrl": "./",
        "paths": {
            "*": ["src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["./node_modules"],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
